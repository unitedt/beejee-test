<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block pagetitle %}{% endblock pagetitle %}</title>

        {% block stylesheet %}
            <link href="{{ container.get('app.root_uri') }}/assets/css/bootstrap.css" rel="stylesheet">
            <link href="{{ container.get('app.root_uri') }}/assets/css/bootstrap-grid.css" rel="stylesheet">
            <link href="{{ container.get('app.root_uri') }}/assets/css/bootstrap-reboot.css" rel="stylesheet">
            {# <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous"> #}
        {% endblock stylesheet %}
        {% block scripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
            <script type="text/javascript" src="{{ container.get('app.root_uri') }}/assets/js/bootstrap.js"></script>
            {# <script type="text/javascript" src="{{ container.get('app.root_uri') }}/assets/js/bootstrap.bundle.js"></script> #}
            <script type= "text/javascript">
                $( document ).ready(function() {
                    $('#new-task-button').on('click', function () {
                        document.location.href = '{{ container.get('app.root_uri') }}/task';
                    })
                });
            </script>
        {% endblock scripts %}
    </head>

    <body>
        {% block navbar %}
            <nav class="navbar navbar-dark bg-dark">
                <a class="navbar-brand" href="{{ container.get('app.root_uri') }}">BeeJee Test</a>
                <div class="navbar-nav mr-auto"><button type="submit" class="btn btn-success" id="new-task-button">New Task</button></div>
                {% include 'user.twig' %}
            </nav>
        {% endblock navbar %}

        <div class="container-fluid">
            <div class="container">
                <div class="container m-3">{% include 'flash.twig' with { 'close': true } %}</div>

                <div class="container"><h1>Tasks</h1></div>

                <div class="container">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </body>
</html>
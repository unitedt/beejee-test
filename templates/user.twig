    {% if is_granted('ROLE_ADMIN') %}
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Admin
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="{{ container.get('app.root_uri') }}/logout">Logout</a>
            </div>
        </div>
    {% else %}
        <form action="{{ container.get('app.root_uri') }}/login" method="POST" class="form-inline navbar-right" role="form">
            <div class="form-group">
                {{ form_widget(loginForm._username, {'attr': {'placeholder': "Login", 'class': 'form-control m-1'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(loginForm._password, {'attr': {'placeholder': "Password", 'class': 'form-control m-1'}}) }}
            </div>
            <button type="submit" class="btn btn-success m-1">Login</button>
            {{ form_widget(loginForm._token) }}
        </form>
    {% endif %}
